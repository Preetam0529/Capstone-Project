<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_user_info">

    <fragment
        android:id="@+id/navigation_user_info"
        android:name="com.example.capstoneproject.ui.user_info.UserInfoFragment"
        android:label="User Info"
        tools:layout="@layout/fragment_user_info" />

    <fragment
        android:id="@+id/navigation_prescriptions"
        android:name="com.example.capstoneproject.ui.prescriptions.PrescriptionsFragment"
        android:label="Prescriptions"
        tools:layout="@layout/fragment_prescriptions" />

    <fragment
        android:id="@+id/navigation_diet"
        android:name="com.example.capstoneproject.ui.diet.DietFragment"
        android:label="Diet"
        tools:layout="@layout/fragment_diet" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.capstoneproject.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>