<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.prescriptions.PrescriptionsFragment">

    <!-- Upload Prescription -->
    <Button
        android:id="@+id/btnUploadPrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Prescription" />

    <!-- Save Prescription -->
    <Button
        android:id="@+id/btnSavePrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Prescription" />

    <!-- List of Saved Prescriptions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPrescriptions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="LinearLayoutManager"/>

</LinearLayout>
