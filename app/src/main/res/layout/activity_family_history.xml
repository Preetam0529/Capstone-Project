<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/family_background_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/app_background"
    tools:context=".ui.user_info.FamilyHistoryActivity">

    <TextView
        android:id="@+id/tvFamilyHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you have any family history?"
        android:textSize="40sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="150dp"/>

    <RadioGroup
        android:id="@+id/radioGroupFamilyHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/radioYes"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_radio_button"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/radioNo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_radio_button"
            android:textSize="16sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/fhsubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="250dp"/>
</LinearLayout>
