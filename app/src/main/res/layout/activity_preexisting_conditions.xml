<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/theme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre-existing Conditions"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Health Condition Checkboxes -->
        <RadioButton
            android:id="@+id/radio_arthritis"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Arthritis"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_asthma"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Asthma"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_atrial_fibrillation"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Atrial Fibrillation"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_copd"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="COPD"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_diabetes"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Diabetes"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_gout"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Gout"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_heart_disease"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Heart Disease"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_hypercholesterolemia"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Hypercholesterolemia"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_hypertension"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Hypertension"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_kidney_disease"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Kidney Disease"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_liver_disease"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Liver Disease"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_metabolic_syndrome"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Metabolic Syndrome"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_migraine"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Migraine"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_obstructive_sleep_apnea"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Obstructive Sleep Apnea"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_peripheral_neuropathy"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Peripheral Neuropathy"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_prediabetes"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Prediabetes"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_sleep_apnea"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Sleep Apnea"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>

        <RadioButton
            android:id="@+id/radio_thyroid_disorder"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:text="Thyroid Disorder"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_radio_button"
            android:layoutDirection="rtl"/>


        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_700"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
