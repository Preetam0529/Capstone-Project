<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.capstoneproject.ui.user_info.UserInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserInfoFragment">

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:columnCount="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Blood Pressure -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#FFCDD2"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Blood Pressure"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Heart Rate -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#C8E6C9"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Heart Rate"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Blood Sugar -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#BBDEFB"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Blood Sugar"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Cholesterol -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#FFF9C4"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Cholesterol"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Oxygen Saturation -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#D1C4E9"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Oxygen Saturation"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Body Temperature -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#FFECB3"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Body Temperature"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

            <!-- Sleep Hours -->
            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="#B3E5FC"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sleep Hours"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>

        </androidx.gridlayout.widget.GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
