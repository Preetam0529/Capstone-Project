<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sleephoueLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="top"
    tools:context=".SleepHourActivity"
    android:background="@drawable/app_bg">

    <!-- Title -->
    <TextView
        android:id="@+id/sleephourTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Sleep Hours"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <!-- Sleep Icon -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/icon_sleep_hours"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_image"
        android:contentDescription="Sleep Icon"/>


    <!-- Sleep Hour Input -->
    <EditText
        android:id="@+id/sleephourInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hours (e.g., 7.5)"
        android:inputType="numberDecimal"
        android:padding="14dp"
        android:textColor="#333333"
        android:layout_marginTop="40dp"
        android:textColorHint="#555555"
        android:background="@drawable/rounded_button"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitsleepHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:background="@drawable/button_background"
        android:layout_marginTop="100dp"
        android:padding="12dp"
        android:elevation="4dp"/>


</LinearLayout>
